
<div class="login-page">
  <div class="form">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name,validate: true, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="col-md-12">
          <%= f.label :email, :class => "font" %><br />
        </div>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <div class="col-md-12">
          <%= f.label :password, :class => "font" %><br />
        </div>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="col-md-10">
            <%= f.label :remember_me, :class => "font" %>
          </div>
          <div class="col-md-2">
            <%= f.check_box :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

