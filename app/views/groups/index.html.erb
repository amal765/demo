


<div id="modal-window-division">

</div>

  <div class="row">
  <span class="white"><h1>All Groupes</h1></span>
    <div class="margin-left">
      <br>
      <br>
      <div class="row">
        <div class="col-md-8">
          <div id="group_table">
            <%= render 'group_partial' %>

          </div>
        </div>
        <% if current_user.admin? %>
          <div class="col-md-3 createGroup ">
            <br>

            <div class="groupForm">

              <%= form_for(@group, validate: true, remote: true, html: {id: "reset_form"}) do |f| %>
                <div id="group_error">
                </div>
                <div class="row">
                  <%= f.text_field :name, placeholder: "Group Name", class: "fullWidth padding formInput" %>
                </div>
                <br>
                <div class="row">
                  <%= f.text_field :max_members, placeholder: "Maximum Members", class: "fullWidth padding formInput" %>
                </div>
                <br>
                <div class="row">
                  <%= f.file_field :image%>
                </div>
                <br>
                <div class="row">
                  <%= f.submit "Create Group", class: "btn btn-primary fullWidth formInput padding" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  <!-- Modal -->


