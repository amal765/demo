
<span class="white"><h1>All Groupes</h1></span>
<div class="row">
<div class="margin-left">
  <% if current_user.admin? %>
    <div class="col-md-12 margin-left" >
      <%= link_to "Create Group", new_group_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  <br>
  <br>
  <div class="allgroupes center">
    <% @groups.each do |group| %>
      <div class="col-md-3 border group">
        <div class="row ">
          <h3 class="white"><%= group.name %></h3>
        </div>
        <% if group.image? %>
          <%= link_to  image_tag(group.image.url), group_path(group), class: "center" %>
        <% else %>
          <%= link_to image_tag("03.jpg"), group_path(group), class: " center" %>
        <% end %>
        <h4 class="white">limit:<%= group.max_members %></h4>
        <% if current_user.admin? %>
          <div class="col-md-4 fullWidth">
            <%= link_to "Delete", group_path(group), method: :delete, class: "btn btn-primary fullWidth" %>
          </div>
        <% else %>
          <div class="col-md-4 fullWidth">
            <%= link_to "Left Group",memberdestroy_group_path(id: group.id, user_id: current_user.id), class: "btn btn-primary fullWidth" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




