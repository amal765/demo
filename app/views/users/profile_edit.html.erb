
<div class="login-page">
  <div class="form">

  <span class="color center">  <h2>Edit Profile</h2> </span>

    <%= form_for(@user) do |f| %>


      <div class="field">
        <%= f.label :First_Name %><br />
        <%= f.text_field :first_name,autofocus: true  %>
      </div>

      <div class="field">
        <%= f.label :Last_Name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :dob %><br />

        <%= f.text_field :dob, value: @user.dob.strftime("%m/%d/%Y"), class: "datepicker" %>
      </div>

      <div class="field">
        <%= f.label :Phone_Number %><br />
        <%= f.text_field :phone_number%>
      </div>

      <div class="actions ">
       <%= f.submit "Update" %>
      </div>
    <% end %>

  </div>
</div>

